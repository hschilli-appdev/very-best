  <div class="container mt-4">
    <div class="row mt-2 justify-content-md-center">
      <div class="col-md-6">
    
    <div class="card mt-6">
      
<ul class="list-group list-group-flush">
<div class="card-header">
  <tr>
    <td>
      <h3>You loved the <%= @dish.name %> at...

      <% if @dish.cuisine.present? %>
        <div class="badge badge-primary float-right">
        <%= @dish.cuisine.name %>
       </div>

    </h3>
      <% end %>
      
    </td>
  </tr>
</div>
</ul>

       

<!-- A Dish has many bookmarks -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item">
        
        
        <form action="/create_bookmark" method="post">
            <div class="form-group">

            <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>" class="form-control">
            </div>
            
            <div class="form-group">

            <input type="hidden" id="dish_id" name="dish_id" value="<%= @dish.id %>" class="form-control">
            </div>
            
            <div class="form-group">

            <input type="hidden" id="notes" name="notes" value="" class="form-control">
            </div>

            <div class="form-group mr-sm-1">
            <label for="venue_id" class="control-label sr-only">
              Venue
            </label>
           
            <%= select_tag("venue_id", options_from_collection_for_select(Venue.all, :id, :name), :class => "col-md-6") %>

            <button class="btn btn-primary btn">
              <i class="fa fa-heart"></i>
            </button>
            <small class="float-right text-muted">
            right now
            </small>
            </div>
            
          </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Dish has many specialists -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      
      

      <% @dish.specialists.each do |venue| %>
        <li class="list-group-item"><p>
          <a href="/venues/<%= venue.id %>">
            <%= venue.name %>
          </a>
          <div class="btn-group btn-group-xs float-right">
            <a href="/venues/<%= venue.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/venues/<%= venue.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_venue/<%= venue.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
  
</div>

<div>
      <a class="btn btn-secondary btn-block btn-primary mb-1" href="/dishes">
      <i class="fa fa-chevron-left"></i>
      </a>
</div>

</div>

</div>
</div>
</div>